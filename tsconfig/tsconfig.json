{
  "compilerOptions": {
    "outDir": "../js",
    "rootDir": "../ts",
    "lib": ["DOM", "es2022"],
    "composite": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "removeComments": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  },

  "exclude": ["../node_modules"],

  "files": [
    "../ts/main.ts"
  ],

  "include": [
  ],
}
