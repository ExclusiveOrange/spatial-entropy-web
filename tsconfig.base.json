{
  "compilerOptions": {
    "composite": true,
    "isolatedModules": true,
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": "./",
    "outDir": "./js",
    "moduleResolution": "Bundler",
    "removeComments": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },

  "exclude": [
    "**/*",
  ]
}
