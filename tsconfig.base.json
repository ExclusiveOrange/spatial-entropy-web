{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": "./ts",
    "outDir": "./js",
    "moduleResolution": "Bundler",
    "removeComments": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },

  "exclude": [
    "js",
    "node_modules"
  ]
}
